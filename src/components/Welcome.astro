<script>
  document.addEventListener('DOMContentLoaded', () => {
    const container = document.querySelector('.avatar-container');
    const secondaryImg = document.getElementById('avatar-secondary');
    let imageLoaded = false;

    container?.addEventListener('mouseenter', () => {
      if (!imageLoaded) {
        secondaryImg?.setAttribute('src', 'src/assets/images/avatar_reality.jpeg');
        imageLoaded = true;
      }
    });
  });
</script>