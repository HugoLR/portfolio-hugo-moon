---
import Timeline from '@/components/Timeline.astro';
import TimelineItem from '@/components/TimelineItem.astro';
import PulpoLogo from '@/assets/logos/pulpo.svg';
import SupervisorLogo from '@/assets/logos/supervisor.svg';
import YaydooLogo from '@/assets/logos/yaydoo.svg';
import UnderlineIcon from '@/assets/icons/fun-underline.svg';
import { getI18N, type Language } from '@/i18n/utils';

const currentLocale = Astro.currentLocale || 'en';
const i18n = getI18N(currentLocale as Language);
---

<section class="scroll-reveal min-h-full py-4">
  <div class="container mx-auto px-4 max-w-4xl">
    <h3 class="flex flex-col items-center text-2xl font-bold mb-6 text-text-primary">
      {i18n.t('work_experience.title')}
      <UnderlineIcon class="underline-icon text-accent-light w-50 h-16" />
    </h3>

    <p class="text-text-secondary mb-8">{i18n.t('work_experience.subtitle')}</p>

    <Timeline>
      <TimelineItem
        date={i18n.t('work_experience.companies.supervisor.period')}
        title={i18n.t('work_experience.companies.supervisor.position')}
        description={i18n.t('work_experience.companies.supervisor.description')}
        logo={SupervisorLogo}
        logoHref="https://getsupervisor.ai/"
        logoCustomWidth={140}
        logoClass="text-supervisor-text"
        companyName="Supervisor"
      />

      <TimelineItem
        date={i18n.t('work_experience.companies.pulpo.period')}
        title={i18n.t('work_experience.companies.pulpo.position')}
        description={i18n.t('work_experience.companies.pulpo.description')}
        logo={PulpoLogo}
        logoHref="https://www.getpulpo.com/"
        companyName="Pulpo"
      />

      <TimelineItem
        date={i18n.t('work_experience.companies.yaydoo.period')}
        title={i18n.t('work_experience.companies.yaydoo.position')}
        description={i18n.t('work_experience.companies.yaydoo.description')}
        logo={YaydooLogo}
        logoHref="https://yaydoo.com/"
        logoClass="text-yaydoo-text"
        isLast={true}
        companyName="Yaydoo"
      />
    </Timeline>
  </div>
</section>