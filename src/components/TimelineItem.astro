---
import type { ImageMetadata } from 'astro';

interface Props {
  date: string;
  title: string;
  description: string;
  logo: ImageMetadata;
  logoCustomWidth?: number;
  isLast?: boolean;
}

const { date, title, description, logo, logoCustomWidth, isLast = false } = Astro.props;
---

<li class="flex gap-4 relative">
  <div class="flex flex-col items-center relative z-10">
    <div class="w-3 h-3 rounded-full bg-accent-primary shrink-0"></div>
    {!isLast && <div class="w-0.5 h-full bg-gray-300 dark:bg-gray-700"></div>}
  </div>

  <div class="flex-1 flex flex-col gap-3 pb-12">
    <time class="font-mono text-sm text-gray-500 dark:text-gray-400 italic -mt-0.5">{date}</time>
    <img
      src={logo.src}
      alt="Company logo"
      width={logoCustomWidth || 80}
      class="object-contain"
    />
    <h4 class="text-lg font-bold text-text-primary dark:text-text-primary">{title}</h4>
    <p class="text-text-secondary dark:text-text-secondary leading-relaxed">{description}</p>
  </div>
</li>
